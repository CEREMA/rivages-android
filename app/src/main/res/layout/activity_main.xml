<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <org.osmdroid.views.MapView
        android:id="@+id/mv_compteur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

	<TextView
		android:id="@+id/tv_osm_link"
		android:text="@string/osm_link"
		style="@style/web_reference"
		/>

    <ImageButton
        android:id="@+id/btn_main_0"
        android:src="@drawable/ic_info_outline_black_48dp"
        android:background="@android:color/transparent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitCenter"
        />

	<ImageButton
		android:id="@+id/btn_main_4"
		android:background="@color/white_transp"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_below="@id/btn_main_0"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginEnd="15dp"
		android:layout_marginRight="15dp"
		android:scaleType="fitCenter"
		android:visibility="invisible"
		/>

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
		android:layout_above="@id/tv_osm_link"
        android:layout_marginBottom="3dp"
        >

    <ImageButton
        android:id="@+id/btn_main_1"
        android:src="@drawable/ic_play_arrow_white_48dp"
		android:background="@android:color/transparent"
        android:layout_width="60dp"
        android:layout_height="60dp"
		android:scaleType="fitCenter"
        />

		<ImageButton
			android:id="@+id/btn_main_1b"
			android:src="@drawable/ic_photo"
			android:background="@android:color/transparent"
            android:layout_width="60dp"
            android:layout_height="60dp"
			android:layout_marginStart="20dp"
			android:layout_marginLeft="20dp"
			android:scaleType="fitCenter"
			/>
		
	<ImageButton
        android:id="@+id/btn_main_2"
        android:src="@drawable/ic_mail_white_48dp"
		android:background="@android:color/transparent"
        android:layout_width="60dp"
        android:layout_height="60dp"
		android:layout_marginStart="20dp"
		android:layout_marginLeft="20dp"
		android:scaleType="fitCenter"
        />

	<ImageButton
        android:id="@+id/btn_main_3"
        android:src="@drawable/ic_exit_to_app_white_48dp"
		android:background="@android:color/transparent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitCenter"
        />
		
	</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:id="@+id/tv_main_1"
            android:layout_width="wrap_content"
            style="@style/texteFinMoyen"
            />

        <TextView
            android:id="@+id/tv_main_2"
            android:layout_width="wrap_content"
            style="@style/texteFinMoyen"
            />

        <TextView
            android:id="@+id/tv_main_3"
            android:layout_width="wrap_content"
            style="@style/texteFinMoyen"
            />

        <TextView
            android:id="@+id/tv_main_4"
            android:layout_width="wrap_content"
            style="@style/texteFinMoyen"
            />
			
		<TextView
            android:id="@+id/tv_main_5"
            android:layout_width="wrap_content"
            style="@style/texteFinMoyen"
            />

		<TextView
			android:id="@+id/tv_main_6"
			android:layout_width="wrap_content"
			style="@style/texteFinMoyen"
			/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>

        <Button
            android:id="@+id/btn_main_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change"
            android:visibility="invisible"/>

		<TextView
			android:id="@+id/tv_main_7"
			android:layout_width="wrap_content"
			style="@style/texteFinMoyen"
			/>

		</LinearLayout>

    </LinearLayout>

</RelativeLayout>
